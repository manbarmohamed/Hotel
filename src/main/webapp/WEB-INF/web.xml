<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Hotel</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>RoomServlet</servlet-name>
  	<servlet-class>com.hotel.servlet.RoomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RoomServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>ReservationServlet</servlet-name>
  	<servlet-class>com.hotel.servlet.ReservationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReservationServlet</servlet-name>
    <url-pattern>/res</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ReservationSuccessServlet</servlet-name>
  	<servlet-class>com.hotel.servlet.ReservationSuccessServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReservationSuccessServlet</servlet-name>
    <url-pattern>/reservation</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>SearchRoomsServlet</servlet-name>
  	<servlet-class>com.hotel.servlet.SearchRoomsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchRoomsServlet</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
</web-app>